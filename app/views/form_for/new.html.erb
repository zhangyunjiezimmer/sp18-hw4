<%= form_tag form_for_path do %>
  <%= label_tag(:task, "task") %>
  <%= text_field_tag(:task) %>

  <%= label_tag(:course_name, "Course name") %>
  <%= text_field_tag(:course_name, nil, placeholder: @placeholder_course) %>

  <%= label_tag(:grade_level, "Grade level") %>
  <%= text_field_tag(:grade_level) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create teacher") %>
<% end %>
